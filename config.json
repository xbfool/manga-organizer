{
  "version": "1.0",
  "description": "漫画整理工具配置文件",

  "paths": {
    "target_directory": "漫画-已整理",
    "temp_directory": ".temp_conversion",
    "log_file": "manga_organizer.log",
    "comics_input": "Z:/漫画/日漫/日语原版/Comics",
    "comics_output": "Z:/漫画/漫画-已整理/日漫/日文版/Comics处理结果"
  },

  "formats": {
    "target_format": "cbz",
    "supported_formats": [".zip", ".rar", ".cbz", ".cbr", ".pdf", ".7z"],
    "convert_formats": {
      "zip": "rename",
      "rar": "convert",
      "cbr": "convert",
      "cbz": "keep",
      "pdf": "keep",
      "7z": "convert"
    }
  },

  "naming": {
    "format": "{series_name} - {volume}",
    "volume_padding": 3,
    "separator": " - ",
    "remove_brackets": false
  },

  "categories": {
    "日漫": {
      "keywords": ["日漫", "日本", "japanese", "manga", "jp"],
      "structure": ["language", "author", "series"],
      "languages": {
        "中文版": ["中文", "中译", "汉化", "chinese", "cn"],
        "日文版": ["日文", "日语", "原版", "japanese", "jp", "raw"],
        "双语版": ["双语", "中日", "合版", "bilingual"]
      }
    },
    "美漫": {
      "keywords": ["美漫", "美国", "american", "comics", "marvel", "dc"],
      "structure": ["publisher", "series"],
      "publishers": {
        "漫威": ["marvel", "漫威"],
        "DC": ["dc", "detective comics"],
        "其他": []
      }
    },
    "港漫": {
      "keywords": ["港漫", "香港", "hongkong", "hk"],
      "structure": ["series"]
    },
    "连环画": {
      "keywords": ["连环画", "小人书"],
      "structure": ["category", "series"]
    }
  },

  "processing": {
    "batch_size": 100,
    "skip_existing": true,
    "mark_processed_dirs": true,
    "processed_marker": "[已处理]",
    "create_backup": false
  },

  "nested_rar": {
    "enabled": true,
    "max_depth": 5,
    "auto_detect": true,
    "flatten_structure": true,
    "clean_japanese_tags": true,
    "patterns_to_remove": [
      "【一般コミック】",
      "【少年コミック】",
      "【青年コミック】",
      "【少女コミック】",
      "【女性コミック】",
      "【成年コミック】",
      "【漫画雑誌】",
      "[一般コミック]",
      "[少年コミック]",
      "[青年コミック]",
      "【参考書】"
    ],
    "volume_patterns": [
      {"pattern": "第(\\d+)巻", "format": "v{:02d}"},
      {"pattern": "第(\\d+)卷", "format": "v{:02d}"},
      {"pattern": "[Vv]ol[._\\s]*(\\d+)", "format": "v{:02d}"},
      {"pattern": "v(\\d+)", "format": "v{:02d}"},
      {"pattern": "\\s+(\\d{2,3})\\s*", "format": "v{:02d}"}
    ],
    "series_cleanup": {
      "remove_patterns": [
        "全\\d+巻",
        "全\\d+卷",
        "[「」『』\\[\\]（）()]"
      ],
      "trim_chars": " -_"
    }
  },

  "progressive_processing": {
    "enabled": true,
    "progress_file": ".progress/processing_progress.json",
    "batch_size": 50,
    "max_daily_files": 500,
    "max_session_time_minutes": 120,
    "auto_save_interval_minutes": 5,
    "auto_save_interval_files": 10,
    "resume_on_error": true,
    "keep_progress_history": true,
    "max_history_entries": 100
  },

  "filters": {
    "min_file_size": 0,
    "max_file_size": 0,
    "exclude_patterns": [
      "*.txt",
      "*.nfo",
      "*.url",
      "Thumbs.db",
      ".DS_Store"
    ],
    "exclude_directories": [
      ".temp",
      "backup",
      "已整理"
    ]
  },

  "logging": {
    "level": "INFO",
    "console_output": true,
    "file_output": true,
    "encoding": "utf-8"
  },

  "komga_prepare": {
    "source_dirs": [
      "Z:/漫画/港漫/[神兵玄奇系列]/神兵前传III[7][未]"
    ],
    "output_dir": "Z:/漫画-Komga就绪-测试",

    "language_priority": ["zh", "ja", "romaji", "en"],

    "metadata_sources": {
      "bangumi": {
        "enabled": true,
        "priority": 1
      },
      "trace_moe": {
        "enabled": true,
        "priority": 2
      },
      "anilist": {
        "enabled": true,
        "priority": 3
      },
      "comicvine": {
        "enabled": false,
        "api_key": "",
        "priority": 4
      }
    },

    "cover_download": true,
    "create_series_comicinfo": false,

    "naming": {
      "japanese": "{title_zh} v{volume:02d}",
      "american": "{title} #{issue:03d}",
      "chinese": "{title} 第{volume:02d}册"
    }
  }
}
